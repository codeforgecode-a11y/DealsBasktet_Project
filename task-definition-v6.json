{
    "family": "dealsbasket",
    "networkMode": "awsvpc",
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "256",
    "memory": "512",
    "executionRoleArn": "arn:aws:iam::970691548516:role/ecsTaskExecutionRole",
    "containerDefinitions": [
        {
            "name": "dealsbasket-app",
            "image": "970691548516.dkr.ecr.ap-south-1.amazonaws.com/dealsbasket:latest",
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 8000,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "DJANGO_SETTINGS_MODULE",
                    "value": "server.settings.production"
                },
                {
                    "name": "DB_HOST",
                    "value": "dealsbasket.chi4u4q4kiid.ap-south-1.rds.amazonaws.com"
                },
                {
                    "name": "DB_NAME",
                    "value": "dealsbasket"
                },
                {
                    "name": "DB_PORT",
                    "value": "5432"
                }
            ],
            "secrets": [
                {
                    "name": "DB_USER",
                    "valueFrom": "arn:aws:ssm:ap-south-1:970691548516:parameter/dealsbasket/db_user"
                },
                {
                    "name": "DB_PASSWORD",
                    "valueFrom": "arn:aws:ssm:ap-south-1:970691548516:parameter/dealsbasket/db_password"
                },
                {
                    "name": "DJANGO_SECRET_KEY",
                    "valueFrom": "arn:aws:ssm:ap-south-1:970691548516:parameter/dealsbasket/django_secret_key"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/dealsbasket",
                    "awslogs-region": "ap-south-1",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ]
}